{
  "expo": {
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "name": "nearbyfiles",
    "slug": "nearbyfiles",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "nearbyfiles",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      ["expo-nearby-connections",
      {
        "bonjourServiceName": "NearbyFiles",
        "localNetworkUsagePermissionText":"$(PRODUCT_NAME) need access to your network for file transfer and device discovery."
      }]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
